<?xml version="1.0" encoding="UTF-8" ?>
<amx:view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:amx="http://xmlns.oracle.com/adf/mf/amx"
          xmlns:dvtm="http://xmlns.oracle.com/adf/mf/amx/dvt">
    <amx:panelPage id="pp1">
        <amx:facet name="header">
            <amx:panelGroupLayout id="pgl1" layout="horizontal" halign="center" valign="top">
                <amx:outputText value="#{pageFlowScope.customer}" id="ot1" inlineStyle="color:White;"/>
            </amx:panelGroupLayout>
        </amx:facet>
        <amx:facet name="primary">
            <amx:commandLink id="cl1" inlineStyle="color:White;" action="backToRcptByExcp">
                <amx:outputHtml id="oh1" styleClass="fa  fa-arrow-left fa-lg"/>
            </amx:commandLink>
        </amx:facet>
        <amx:listView var="row" value="#{bindings.poHeaders.collectionModel}"
                      fetchSize="#{bindings.poHeaders.rangeSize}"
                      selectedRowKeys="#{bindings.poHeaders.collectionModel.selectedRow}"
                      initialScrollRowKeys="#{bindings.poHeaders.collectionModel.selectedRow}"
                      selectionListener="#{bindings.poHeaders.collectionModel.makeCurrent}"
                      showMoreStrategy="autoScroll" bufferStrategy="viewport" id="lv1" layout="cards">
            <amx:listItem id="li1" action="orderLines">
                <amx:tableLayout id="tl1" width="100%">
                    <amx:rowLayout id="rl1">
                        <amx:cellFormat id="cf1" halign="end" columnSpan="3">
                            <amx:outputText value="Ship From" id="ot6" inlineStyle="color:#86bc25; font-size:small;"/>
                        </amx:cellFormat>
                        <amx:cellFormat id="cf4" halign="end">
                            <amx:outputText value="#{row.location}" id="ot2"
                                            inlineStyle="font-size:medium; color:Grey;"/>
                        </amx:cellFormat>
                    </amx:rowLayout>
                    <amx:rowLayout id="rl2">
                        <amx:cellFormat id="cf2"
                                        inlineStyle="border-top-color:Silver; border-top-style:solid; border-top-width:thin;">
                            <amx:outputText value="PO/ISO" id="ot5"
                                            inlineStyle="color:#86bc25; font-size:small;"/>
                        </amx:cellFormat>
                        <amx:cellFormat id="cf5"
                                        inlineStyle="border-top-color:Silver; border-top-style:solid; border-top-width:thin;">
                            <amx:outputText value="#{row.documentNumber}" id="ot3" inlineStyle="font-size:xx-large;"/>
                        </amx:cellFormat>
                    </amx:rowLayout>
                    <amx:rowLayout id="rl3">
                        <amx:cellFormat id="cf3">
                            <amx:outputText value="Value" id="ot7" inlineStyle="color:#86bc25; font-size:small;"/>
                        </amx:cellFormat>
                        <amx:cellFormat id="cf6">
                            <amx:outputText value="#{row.orderValue}" id="ot4"
                                            inlineStyle="font-size:x-large; color:Grey;"/>
                        </amx:cellFormat>
                    </amx:rowLayout>
                </amx:tableLayout>
                <amx:setPropertyListener id="spl1" from="#{row.documentNumber}" to="#{pageFlowScope.documentNumber}"/>
                <amx:setPropertyListener id="spl2" from="#{row.docHeaderId}" to="#{pageFlowScope.orderId}"/>
            </amx:listItem>
        </amx:listView>
    </amx:panelPage>
</amx:view>

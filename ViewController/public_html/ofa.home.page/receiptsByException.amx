<?xml version="1.0" encoding="UTF-8" ?>
<amx:view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:amx="http://xmlns.oracle.com/adf/mf/amx"
          xmlns:dvtm="http://xmlns.oracle.com/adf/mf/amx/dvt">
  <amx:panelPage id="pp1">
    <amx:facet name="header">
      <amx:outputText value="Receipts by Exception - #{pageFlowScope.orderOrRctStatus}" id="ot1"/>
    </amx:facet>
    <amx:facet name="primary">
      <amx:commandButton id="cb1"/>
    </amx:facet>
    <amx:facet name="secondary">
      <amx:commandButton id="cb2"/>
    </amx:facet>
    <amx:panelGroupLayout id="pgl1" layout="vertical" halign="center" valign="middle">
      <amx:outputText value="Value by Source" id="ot2"/>
      <dvtm:barChart var="row" value="#{bindings.rctDetailsCountL2.collectionModel}" id="bc1">
        <amx:facet name="dataStamp">
          <dvtm:chartDataItem group="#{row.customerName}" value="#{row.count}"
                              series="#{bindings.rctDetailsCountL2.hints.count.label}" id="cdi1">
             <amx:setPropertyListener id="spl1" from="#{row.customerName}" to="#{pageFlowScope.customer}"/>
          </dvtm:chartDataItem>
        </amx:facet>
        <dvtm:legend position="end" id="l1"/>
      </dvtm:barChart>
      <amx:outputText value="Aging by Source" id="ot3"/>
      <dvtm:barChart var="row" value="#{bindings.rctDetailsAgingL2.collectionModel}" id="bc2">
        <amx:facet name="dataStamp">
          <dvtm:chartDataItem group="#{row.customerName}" value="#{row.count}"
                              series="#{bindings.rctDetailsAgingL2.hints.count.label}" id="cdi2">
             <amx:setPropertyListener id="spl2" from="#{row.customerName}" to="#{pageFlowScope.customer}"/>
          </dvtm:chartDataItem>
        </amx:facet>
        <dvtm:legend position="end" id="l2"/>
      </dvtm:barChart>
    </amx:panelGroupLayout>
  </amx:panelPage>
</amx:view>
